<html>
<head>
    <style>
        .container {
            max-width: 300px;
            margin: 10px;
            padding: 10px;
            border: 1px solid #ccc;
            border-radius: 8px;
        }
        form {
            display: flex;
            flex-direction: column;
            gap: 5px;
        }
        label {
            font-weight: bold;
            margin-bottom: 5px;
        }
    </style>
</head>
<body>

        <h1>Add Student</h1>
        <hr />
        <a href="/">Home</a><br />
        <hr />
        <div class="container">
            <% if (typeof errors !== 'undefined' && errors.length > 0) { %>
                <ul class="error"  style="color:red;">
                    <% errors.forEach(error => { %>
                        <li><%= error.msg %></li>
                    <% }) %>
                </ul>
            <% } %>

        <form action="/students/add" method="POST">
            <label for="sid">Student ID</label>
            <input type="text" id="sid" name="sid" value="<%= typeof student !== 'undefined' ? student.sid : '' %>"/><br />
            
            <label for="name">Name</label>
            <input type="text" id="name" name="name" value="<%= typeof student !== 'undefined' ? student.name : '' %>"/><br />
            
            <label for="age">Age</label>
            <input type="number" id="age" name="age" value="<%= typeof student !== 'undefined' ? student.age : '' %>"/><br />
            
            <input type="submit" value="Add" />
        </form>
    </div>
</body>
</html>